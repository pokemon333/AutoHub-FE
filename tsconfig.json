{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
       "@/*": ["./src"],
       "core@" : ["./src/core"],
       "landing@" : ["./src/modules/landing"],
       "car@" : ["./src/modules/car"],
       "search@" : ["./src/modules/car/modules/search"],
       "advanceSearch@" : ["./src/modules/car/modules/advanceSearch"],
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts", 
    "src/**/*.tsx", 
    "src/**/*.vue",
    "src/**/*",


    "src/app/core/**/*.ts",
    "src/app/modules/car/**/*.ts",
    "src/app/modules/car/modules/search**/*.ts",
    "src/app/modules/car/modules/advanceSearch**/*.ts",
    "src/app/modules/landing/**/*.ts",
    
    "src/app/core/**/*",
    "src/app/modules/car/**/*",
    "src/app/modules/car/modules/search**/*",
    "src/app/modules/car/modules/advanceSearch**/*",
    "src/app/modules/landing/**/*.",

    "src/app/core/**/*.vue",
    "src/app/modules/car/**/*.vue",
    "src/app/modules/car/modules/search**/*.vue",
    "src/app/modules/car/modules/advanceSearch**/*.vue",
    "src/app/modules/landing/**/*.",
    "src/app/modules/landing/**/*.vue",
  ],
  "references": [{ "path": "./tsconfig.node.json" }],
}
